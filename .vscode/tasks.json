{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: clang++ build *.cpp in active dir",
      "command": "clang++",
      "args": [
        "-g",
        "-Wall",
        "-std=c++17",
        "*.cpp",
        "-o",
        "main.out"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Simple build task, for simple folk."
    },
    {
      "type": "shell",
      "label": "C/C++: Clean up build/debug files.",
      "command": "rm",
      "args": [
        "-rf",
        "**.dSYM",
        "**.out"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "detail": "Remove messy .dSYM and .out files",
      "problemMatcher": []
    }
  ],
  "version": "2.0.0"
}